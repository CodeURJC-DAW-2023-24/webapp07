{{> header}}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <br><br><br>
        <h2>Edit Profile</h2>
    </div>
</section><!-- End Breadcrumbs -->

{{#userEntity}}
    <div class="container profile-creation-container-unique">
        <form action="/editProfile" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="profile-name-unique">User Name</label>
            <input type="text" id="profile-name-unique" class="form-control" name="name" readonly value="{{name}}">
        </div>
            <div class="form-group">
                <label for="profile-mail-unique">Email</label>
                <input type="text" id="profile-mail-unique" class="form-control" name="email" required value="{{email}}">
            </div>
        <div class="form-group">
            <label for="profile-photo-unique">Profile Photo</label>
            <input type="file" id="profile-photo-unique" name="photo" accept="image/*">
        </div>
        <input type="hidden" name="_csrf" value="{{token}}">

        <button type="submit" class="btn btn-primary">Edit Profile</button>

    </form>
    </form>
    </div>

{{/userEntity}}
{{> footer}}

<script>
    $(document).ready(function () {
        // Upload slide button click event
        $('#upload-slide-btn').click(function () {
            $('#new-slide-input').click();
        });

        // New input change event
        $('#new-slide-input').on('change', function (event) {
            var fileInput = $(this)[0];
            var file = fileInput.files[0];

            if (file) {
                var reader = new FileReader();
                reader.readAsDataURL(file);
            }
        });
    });
</script>
