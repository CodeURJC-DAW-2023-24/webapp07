<!-- ======= Portfolio Details Section ======= -->

<div class="row gy-4 create-project-form">
    <div class="col-lg-8">
        <div id="slides" class="portfolio-details-slider swiper">
            <!-- Slides container -->
            <div class="swiper-wrapper align-items-center">

            </div>
            <!-- Pagination -->
            <div class="swiper-pagination"></div>
        </div>

        <!-- Input field and button to upload new slide -->
        <input type="file" id="new-slide-input" class="form-control" accept="image/*" hidden>
        <button id="upload-slide-btn" class="btn btn-primary" type="submit">Upload slide</button>

    </div>


    <div class="col-lg-4">
        <form action="/newProject" method="post">
            <div class="portfolio-info">
                <input type="text" id="project-name" placeholder="Project title" class="form-control" name="name">
                <ul>
                    <li>
                        <select id="categories" name="category">
                            {{#categories}}
                            <option value={{.}}>{{.}}</option>
                            {{/categories}}
                        </select>
                    </li>
                    <li><strong>Project URL</strong>: <input type="text" name="url" class="form-control"></li>
                    <li><strong>Amount needed</strong>: <input type="number" name="goal" class="form-control"></li>

                </ul>
            </div>
            <div class="portfolio-description">
                <h2>About this project</h2>
                <textarea name="description" class="form-control" rows="5" required></textarea>
            </div>
            <input type="hidden" name="_csrf" value="{{token}}"/>
            <button id="upload-project-btn" class="btn btn-primary" type="submit">Upload Project</button>
        </form>

    </div>
</div>

